<h2>Add New Order</h2>
<form action="/add-order" method="post" class="row g-3 mb-4">
  <div class="col-md-4">
    <label>Customer</label>
    <select name="CustomerId" class="form-control">
      {{#each customers}}
        <option value="{{id}}">{{firstName}} {{lastName}}</option>
      {{/each}}
    </select>
  </div>
  <div class="col-md-2">
    <label>Size</label>
    <select name="size" class="form-control">
      <option>S</option>
      <option>M</option>
      <option>L</option>
      <option>XL</option>
    </select>
  </div>
  <div class="col-md-3">
    <label>Toppings</label>
    <input name="toppings" class="form-control" placeholder="Ham, Peppers">
  </div>
  <div class="col-md-3">
    <label>Status</label>
    <select name="status" class="form-control">
      <option>New</option>
      <option>Processing</option>
      <option>Completed</option>
    </select>
  </div>
  <div class="col-12">
    <label>Notes</label>
    <textarea name="notes" class="form-control"></textarea>
  </div>
  <div class="col-12">
    <button class="btn btn-primary">Add Order</button>
  </div>
</form>

<hr>

<h2>Orders</h2>
<table class="table table-bordered">
  <thead>
    <tr>
      <th>ID</th>
      <th>Customer</th>
      <th>Size</th>
      <th>Toppings</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    {{#each orders}}
    <tr>
      <td>{{id}}</td>
      <td>{{Customer.firstName}} {{Customer.lastName}}</td>
      <td>{{size}}</td>
      <td>{{toppings}}</td>
      <td>
        <a href="/order/{{id}}" class="btn btn-info btn-sm">View</a>
        <a href="/order/edit/{{id}}" class="btn btn-warning btn-sm ms-1">Edit</a>
        <a href="/order/delete/{{id}}" class="btn btn-danger btn-sm ms-1">Delete</a>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>
