<section class="hero">
    <h1>{{destination}}</h1>
</section>

<div class="content-grid">
    <div class="text-box">
        <h2>About {{destination}}</h2>
        <p>{{about}}</p>
    </div>

    <div class="text-box">
        <h2>Our Services in {{destination}}</h2>
        <ul>
            {{#each services}}
                <li>{{this}}</li>
            {{/each}}
        </ul>
    </div>
</div>

<!-- New Informational Section -->
<section class="text-box">
    <h2>Interesting Facts About {{destination}}</h2>
    <p>{{facts}}</p>
</section>

<!-- Top Destinations -->
<section class="destination-grid">
    <h2>Top Places to Visit in {{destination}}</h2>
    <ul>
        {{#each destinations}}
            <li>{{this}}</li>
        {{/each}}
    </ul>
</section>

<!-- Expanded Gallery Section -->
<section class="gallery">
    <h2>Gallery - {{destination}}</h2>
    <div class="gallery-grid">
        {{#each gallery}}
            <div class="gallery-item">
                <img src="{{this.image}}" alt="{{this.name}}">
                <div class="image-info">{{this.name}}</div>
            </div>
        {{/each}}
    </div>
</section>
