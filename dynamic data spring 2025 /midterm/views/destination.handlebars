<section class="hero">
    <h1>Discover {{destination}}</h1>
</section>

<div class="content-grid">
    <!-- About Section -->
    <div class="text-box">
        <h2>About {{destination}}</h2>
        <p>{{about}}</p>
    </div>

    <!-- Services Section -->
    <div class="text-box">
        <h2>Our Services in {{destination}}</h2>
        <ul>
            {{#each services}}
                <li>{{this}}</li>
            {{/each}}
        </ul>
    </div>
</div>

<!-- Interesting Facts -->
<section class="text-box">
    <h2>Interesting Facts About {{destination}}</h2>
    <p>{{facts}}</p>
</section>

<!-- Popular Places to Visit -->
<section class="destination-grid">
    <h2>Must-Visit Places in {{destination}}</h2>
    <ul>
        {{#each destinations}}
            <li>{{this}}</li>
        {{/each}}
    </ul>
</section>

<!-- Destination-Specific Image Grid (Shows ALL 4 Images for the Destination) -->
<section class="destination-gallery">
    <h2>Explore {{destination}}</h2>
    <div class="destination-grid">
        {{#each destinationGallery}}
            <div class="destination-card" style="background-image: url('{{this.image}}');">
                <div class="destination-info">{{this.name}}</div>
            </div>
        {{/each}}
    </div>
</section>

<!-- Full Gallery (Displays ALL 16 Images) -->
<section class="gallery">
    <h2>Gallery of {{destination}}</h2>
    <div class="gallery-grid">
        {{#each fullGallery}}
            <div class="gallery-item">
                <img src="{{this.image}}" alt="{{this.name}}">
                <div class="image-info">{{this.name}}</div>
            </div>
        {{/each}}
    </div>
</section>
