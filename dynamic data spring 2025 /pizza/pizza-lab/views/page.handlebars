<h2>Add New Customer</h2>
{{> customerForm }}

<hr>

<h2>Customer List</h2>
<table class="table table-bordered">
  <thead>
    <tr>
      <th>ID</th>
      <th>Full Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    {{#each customers}}
    <tr>
      <td>{{id}}</td>
      <td>{{firstName}} {{lastName}}</td>
      <td>{{email}}</td>
      <td>{{phone}}</td>
      <td>
        <a href="/customer/{{id}}" class="btn btn-info btn-sm">View</a>
        <a href="/customer/delete/{{id}}" class="btn btn-danger btn-sm ms-2">Delete</a>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>
